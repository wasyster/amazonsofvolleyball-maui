<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiUI.Pages.AddOrUpdatePlayer"
             xmlns:local="clr-namespace:Backend.Models;assembly=Backend.Models">

    <ContentPage.BindingContext>
        <local:PlayerModel />
    </ContentPage.BindingContext>

    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="save.svg" />
    </ContentPage.ToolbarItems>

    <FlexLayout Direction="Column" AlignItems="Start" AlignContent="Stretch"
                Margin="10">
        <VerticalStackLayout >
            <Label Text="Name"/>
            <Entry Text="{Binding Name}" />
        </VerticalStackLayout>
        <VerticalStackLayout>
            <Label Text="Birth place"/>
            <Entry Text="{Binding BirthPlace}" />
        </VerticalStackLayout>
    </FlexLayout>

</ContentPage>