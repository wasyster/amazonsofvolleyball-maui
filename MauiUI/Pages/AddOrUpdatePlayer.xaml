<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiUI.Pages.AddOrUpdatePlayer"
             xmlns:local="clr-namespace:Backend.Models;assembly=Backend.Models">

    <ContentPage.BindingContext>
        <local:PlayerModel />
    </ContentPage.BindingContext>

    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="save.svg" Clicked="OnSaveClick"/>
    </ContentPage.ToolbarItems>

    <FlexLayout Direction="Column" AlignItems="Start" AlignContent="Stretch"
                Margin="10">
        <VerticalStackLayout >
            <Label Text="Name" />
            <Entry x:Name="name" Text="{Binding Name}" />
        </VerticalStackLayout>
        <VerticalStackLayout >
            <Label Text="Position" />
            <Picker x:Name="position" Title="Position" 
                    ItemDisplayBinding="{Binding Name}"
                    SelectedItem="{Binding PositionId}"/>
        </VerticalStackLayout>
        <VerticalStackLayout>
            <Label Text="Club" />
            <Entry x:Name="club" Text="{Binding Club}" />
        </VerticalStackLayout>
        <VerticalStackLayout>
            <Label Text="Birthday" />
            <DatePicker x:Name="birthday" Date="{Binding Birthday}" />
        </VerticalStackLayout>
        <VerticalStackLayout>
            <Label Text="Birth place" />
            <Entry x:Name="birthplace" Text="{Binding BirthPlace}" />
        </VerticalStackLayout>
        <VerticalStackLayout>
            <Label Text="Weight"/>
            <Entry x:Name="weight" Text="{Binding Weight}" Keyboard="Numeric" />
        </VerticalStackLayout>
        <VerticalStackLayout>
            <Label Text="Height" />
            <Entry x:Name="height" Text="{Binding Height}" Keyboard="Numeric" />
        </VerticalStackLayout>
        <VerticalStackLayout>
            <Label Text="Image link" />
            <Entry x:Name="webImageLink" Text="{Binding WebImageLink}" />
        </VerticalStackLayout>
        <VerticalStackLayout>
            <Label Text="Description" />
            <Editor x:Name="description" Text="{Binding Description}" />
        </VerticalStackLayout>
    </FlexLayout>

</ContentPage>